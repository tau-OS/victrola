using Gtk 4.0;
using He 1;
using Bis 1;

template VictrolaMainWindow : He.ApplicationWindow {
  visible: true;
  default-width: 1024;
  default-height: 600;
  width-request: 360;
  height-request: 280;

  Box {
    orientation: vertical;

    Bis.Album album {
      can-navigate-back: true;
      can-navigate-forward: true;
      visible-child: listgrid;

      Bis.AlbumPage {
        child:
          He.SideBar listgrid {
            vexpand: true;
            hexpand: true;
            show-left-title-buttons: true;
            show-right-title-buttons: bind album.folded;
            show-back: false;
            has-margins: false;
            titlewidget:
            He.ViewChooser viewchooser {
              stack: stack;
              valign: start;
              vexpand: false;
              vexpand-set: true;
            };

            styles [
                  "main-view"
            ]

            [titlebar-toggle]
            ToggleButton search_btn {
              icon-name: "edit-find-symbolic";
              active: bind search_bar.search-mode-enabled no-sync-create bidirectional;
              tooltip-text: _("Search music");
            }

            [titlebar-toggle]
            ToggleButton info_btn {
              icon-name: "media-view-subtitles-symbolic";
              tooltip-text: _("Show music info");
              active: true;
            }

            [titlebar-menu]
            MenuButton menu_btn {
              valign: center;
              icon-name: "open-menu-symbolic";
              menu-model: primary_menu;
            }

            SearchBar search_bar {
              key-capture-widget: VictrolaMainWindow;
              child: SearchEntry search_entry {
                hexpand: true;
                margin-start: 18;
                halign: start;
                placeholder-text: "";

                styles [
                  "search",
                  "text-field",
                  "outline"
                ]
              };

              styles [
                "search-bar",
              ]
            }

              ScrolledWindow scroll_view {
                hscrollbar-policy: never;
                vexpand: true;

                Stack stack {
                  margin-start: 18;
                  margin-end: 18;
                  margin-bottom: 18;
                  margin-top: 12;

                  StackPage {
                    icon-name: "media-optical-cd-audio-symbolic";
                    title: "Albums";
                    name: "album";
                    child:
                    GridView list_view1 {
                      single-click-activate: true;
                      max-columns: 5;
                      min-columns: 1;

                      styles [
                        "music-grid"
                      ]
                    }
                    ;
                  }

                  StackPage {
                    icon-name: "system-users-symbolic";
                    title: "Artists";
                    name: "artist";
                    child:
                    GridView list_view2 {
                      single-click-activate: true;
                      max-columns: 5;
                      min-columns: 1;

                      styles [
                        "music-grid"
                      ]
                    }
                    ;
                  }

                  StackPage {
                    icon-name: "audio-x-generic-symbolic";
                    title: "Titles";
                    name: "title";
                    child:
                    ListView list_view3 {
                      single-click-activate: true;

                      styles [
                        "content-list",
                        "music-list"
                      ]
                    }
                    ;
                  }
                }
              }

            Box info_box_mobile {
              orientation: vertical;
              visible: bind album.folded;
            }
          }
        ;
      }

      Bis.AlbumPage {
        child:
          Box infogrid {
            orientation: vertical;
            hexpand-set: true;
            width-request: 360;
            visible: bind info_btn.active no-sync-create bidirectional;

            styles [
                  "sidebar-view",
                  "side-pane"
            ]

            He.AppBar info_title {
              show-back: bind album.folded;
              show-left-title-buttons: bind album.folded;
              show-right-title-buttons: true;
              viewtitle-label: "";
            }

            Box info_box {
              orientation: vertical;
              vexpand: true;
            }
          }
        ;
      }
    }
  }
}

menu primary_menu {
  section {
    item {
      label: _("Open Music Folderâ€¦");
      action: "app.open";
    }
  }
  section {
    item {
      label: _("About Victrola");
      action: "app.about";
    }
  }
}
